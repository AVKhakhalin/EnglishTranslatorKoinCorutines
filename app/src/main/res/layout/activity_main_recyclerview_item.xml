<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/error_linear_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/colorSurface">

    <TextView
        android:id="@+id/header_textview_recycler_item"
        android:layout_width="wrap_content"
        android:layout_marginStart="@dimen/margin_medium"
        android:layout_height="wrap_content"
        android:textColor="?attr/colorOnSecondary"
        style="@style/HeaderTextStyle"
        tools:text="@string/header_textview_recycler_item_tools_text"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/description_textview_recycler_item"
        android:layout_width="wrap_content"
        android:layout_marginStart="@dimen/margin_medium"
        android:layout_height="wrap_content"
        android:textColor="?attr/color"
        style="@style/BaseTextStyle"
        tools:text="@string/description_textview_recycler_item_tools_text"
        app:layout_constraintTop_toBottomOf="@id/header_textview_recycler_item"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/word_pictogram"
        android:layout_width="@dimen/word_pictogram_width"
        android:layout_height="@dimen/word_pictogram_height"
        android:layout_marginTop="@dimen/word_pictogram_margin_top"
        android:layout_marginEnd="@dimen/word_pictogram_margin_end"
        android:background="?attr/colorOnBackground"
        app:layout_constraintEnd_toStartOf="@id/save_to_db"
        app:layout_constraintTop_toTopOf="@id/header_textview_recycler_item"
        app:layout_constraintBottom_toBottomOf="@id/description_textview_recycler_item"
        app:srcCompat="@drawable/alphabet" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/save_to_db"
        android:layout_width="@dimen/save_to_db_width"
        android:layout_height="@dimen/save_to_db_height"
        android:layout_marginTop="@dimen/save_to_db_margin_top"
        android:layout_marginEnd="@dimen/save_to_db_margin_end"
        android:background="?attr/colorOnBackground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/header_textview_recycler_item"
        app:layout_constraintBottom_toBottomOf="@id/description_textview_recycler_item"
        app:srcCompat="@drawable/ic_save_to_db" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/word_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/word_image_margin_start"
        android:layout_marginEnd="@dimen/word_image_margin_end"
        android:layout_marginTop="@dimen/word_image_margin_top"
        android:layout_marginBottom="@dimen/word_image_margin_bottom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/word_pictogram"
        app:srcCompat="@drawable/cat_back"
        android:visibility="gone" />

    <View xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="@dimen/hairline"
        android:background="?attr/color"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
